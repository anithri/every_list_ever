<article class="bg-indigo-200 border-2 border-indigo-900 flex-auto grow-0
                rounded-md container-sm<%= classes.present? ? " #{classes}" : "" %>">
  <header class="px-5 py-1 bg-indigo-800 text-white rounded-t-sm">
    <h2 class="text-2xl font-bold text-center">

    </h2>
    <%- if subtitle %>
      <div class="w-full text-center"><span class="text-center"><%= subtitle %></span></div>
    <% end %>
  </header>

  <div class="h-full w-full p-2 bg-reading-surface-light text-reading-type-dark rounded-b-sm">
    <%= content %>
  </div>
</article>
