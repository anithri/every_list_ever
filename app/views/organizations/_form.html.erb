<%= simple_form_for organization, class: "contents" do |f| %>
  <%= f.input :name %>
  <%= f.input :subtitle %>
  <%= f.input :description %>
  <%= f.input :visible, type: :checkbox %>
  <%= component :btn_bar, :div do %>
    <%= f.submit class: submit_classes(size: :md, shape: :bar) %>
    <%= btn :show, organization_path(organization), "Org", size: :md, shape: :bar %>
    <%= btn :back_to, organizations_path, "Orgs", size: :md, shape: :bar %>
  <% end %>
<% end %>
