<div class="flex w-full h-full items-center justify-center">
  <%= render PaneComponent.new title: "Edit #{@user.name}'s Profile",
                               subtitle: "Find me in app/views/users/edit.html.erb" do %>

    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
        <%= notice %>
      </p>
    <% end %>

    <h1 class="font-bold text-4xl">New user</h1>

    <%= render "form", user: @user %>

    <%= link_to "Back to users", users_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</div>
