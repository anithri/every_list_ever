<%= simple_form_for user, class: "contents" do |f| %>
  <%= f.input :email %>
  <%= f.input :name %>
  <%= f.input :avatar_url %>
  <%= f.input :description %>
  <%= f.input :location %>
  <%= f.input :visible, type: :checkbox %>

  <%= component :btn_bar, :div do %>
    <%= f.submit class: submit_classes(size: :md, shape: :bar) %>
    <%= btn :back_to, organizations_path, "Users", size: :md, shape: :bar %>
  <% end %>
<% end %>
